<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <bean id="provider" class="org.google.webdriver.DriverProvider" />

  <bean id="lifeCycle" class="org.jbehave.web.selenium.PerScenarioWebDriverSteps">
    <constructor-arg ref="provider" />
  </bean>

  <bean id="searchSteps" class="org.google.steps.SearchSteps">
    <constructor-arg ref="provider" />
  </bean>

  <bean id="screenshot"
    class="org.google.webdriver.listeners.MyWebDriverScreenshotOnFailure">
    <constructor-arg ref="provider" />
  </bean>
  
</beans>
